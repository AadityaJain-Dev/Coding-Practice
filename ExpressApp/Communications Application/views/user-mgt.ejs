<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Communications Application</title>
  </head>

  <body class="">
    <div class="container-fluid fixed-top mb-5">
      <div class="row">
        <a
          class="btn my-btn-secondary col-3 border border-dark border-1 rounded-0"
          href="/chat"
          role="button"
        >
          Group Chat</a
        >
        <a
          class="btn col-3 border border-dark border-1 rounded-0 btn-light"
          href="/manage-user"
          role="button"
        >
          Manage Users
        </a>
        <a
          class="btn my-btn-secondary col-3 border border-dark border-1 rounded-0"
          href="/manage-docs"
          role="button"
        >
          Manage Documents
        </a>
        <a
          class="btn my-btn-secondary col-3 border border-dark border-1 rounded-0"
          href="/logout"
          role="button"
        >
          Logout
        </a>
      </div>
    </div>

    <div class="mt-5">
      <h3 class="ps-3">Users</h3>
      <div class="p-2">
        <table class="table table-striped rounded-2 p-2 custom-table">
          <thead class="border-0 m-5 my-bg-secondary">
            <tr class="border-0 rounded-0">
              <td scope="col">Name</td>
              <td scope="col">User Email Id</td>
              <td scope="col"></td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Text User</td>
              <td>textuser@gmail.com</td>
              <td>
                <span
                  ><a href="/edit-user?userEmail=1" class="text-dark">Edit</a>
                </span>
                |
                <span
                  ><a href="#" class="text-dark" onclick="deleteUser(1)"
                    >Delete</a
                  >
                </span>
              </td>
            </tr>

            <tr>
              <td>Anne Hunter</td>
              <td>anne.hunter@gmail.com</td>
              <td>
                <span
                  ><a href="/edit-user?userEmail=2" class="text-dark">Edit</a>
                </span>
                |
                <span
                  ><a href="#" class="text-dark" onclick="deleteUser(2)"
                    >Delete</a
                  >
                </span>
              </td>
            </tr>

            <tr>
              <td>Jale Boster</td>
              <td>Jale@yahoo.com</td>
              <td>
                <span
                  ><a href="/edit-user?userEmail=3" class="text-dark">Edit</a>
                </span>
                |
                <span
                  ><a href="#" class="text-dark" onclick="deleteUser(3)"
                    >Delete</a
                  >
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"
  ></script>

  <script>
    function deleteUser(user_id) {
      confirm("Do you want to delete user " + user_id);
    }
  </script>
</html>
